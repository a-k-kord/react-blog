{
  "compilerOptions": {
    "sourceMap": true, // Generate source map files for better debugging experience
    "target": "es5", // Specify the ECMAScript target version
    "module": "esnext", // Specify the module code generation
    "moduleResolution": "node", // Specify how modules are resolved
    "jsx": "react-jsx", // Specify JSX code generation
    "allowJs": false,
    "emitDecoratorMetadata": true, // Emit design-type metadata for decorated declarations
    "experimentalDecorators": true, // Enable experimental support for decorators
    "declaration": false, // Generate corresponding .d.ts files
    "noImplicitAny": true, // Allow implicit 'any' types
    "noImplicitReturns": false, // Allow missing return statements
    "removeComments": false, // Preserve comments in the output
    "resolveJsonModule": true, // Enable importing JSON modules
    "strictNullChecks": false, // Enable strict null checks
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "outDir": "./dist", // Specify the output directory for compiled files
    "lib": ["dom", "es2017"], // Specify the library files to be included
    "baseUrl": ".", // Specify the base directory for module resolution
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src", "node_modules/@types"],
  "compileOnSave": false, // Enable/disable automatic ts compilation on file save
  "exclude": ["public", "node_modules", "dist", ".fttemplates"]
}
